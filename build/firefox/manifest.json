{
  "manifest_version": 2,
  "name": "Reminder Manager",
  "version": "1.1.0",
  "description": "A browser extension to add, edit, and delete reminders with scheduling options",
  "permissions": ["storage", "alarms", "notifications"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background-firefox.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "reminder-manager@yourdomain.com",
      "strict_min_version": "79.0"
    }
  }
}